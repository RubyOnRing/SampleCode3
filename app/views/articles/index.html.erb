<div class="card" id="articles">
  <div class="card-header">
    <h3>Article List</h3>
  </div>
  <div class="card-body">
    <% if @articles.blank? %>
      <%= render 'shared/no_data' %>
    <% else %>
      <table class="table table-responsive-sm table-striped">
        <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Created date</th>
        </tr>
        </thead>
        <tbody>
          <%= render @articles %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

